{{#if message}}
  <div class="alert alert-success alert-dismissible fade show mt-4" role="alert">
    {{message}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/if}}

<div class="card mt-2">
    <div class="card-header bg-dark text-white">
        <h3>Equipos</h3>
    </div>
    <div class="card body bg-dark text-white">
        <div class="row">
            {{#each images}}
                <div class="col-md-4 mb-4">
                    <a href="/teams/{{name}}">
                        <img src="/public/upload/{{image}}" alt="" class="w-100 h-100 img-thumbnail">
                    </a>
                    <p>{{name}}</p>
                </div>
                
            {{/each}}
        </div>
    </div>
</div>