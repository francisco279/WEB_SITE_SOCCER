{{#each errors}}
  <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
    {{text}}
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
{{/each}}

<div class="row mt-5">
  <div class="col-md-7 mx-auto">
    <div class="card bg-dark text-white">
      <div class="card-header pt-5" >
        <h4 class="text-center">
          Registrar Jugador
        </h4>
      </div>
      <div class="card-body">
        <form action="/players/add" method="POST" enctype="multipart/form-data">
          
          <div class="mb-3">
            <label for="name">Nombre del Jugador:</label>
            <input
              type="text"
              class="form-control"
              name="name"
            />
          </div>

          <div class="mb-3">
            <label for="age">Edad:</label>
            <input
              type="number"
              class="form-control"
              name="age"
              min="13"
            />
          </div>
          
          <div class="mb-3">
            <label> Posición:</label>
                <select name="position" class="form-select form-select-sm" aria-label="Ejemplo de .form-select-sm">
                    <option selected>Seleccionar Posición</option>
                    <option value="Portero">Portero</option>
                    <option value="Defensa">Defensa</option>
                    <option value="Mediocampista">Mediocampista</option>
                    <option value="Delantero">Delantero</option>
                </select>
          </div>

          <div class="mb-3">
            <label for="name">Equipo:</label>
            <input
              type="text"
              class="form-control"
              name="team2"
              value={{team}}
              disabled
            />

            <input type="hidden" name="team" value={{team}}>
          </div>

          <div class="mb-3">
                <div class="form-group pb-4">
                <label for="inputGroupFile" class="custom-File-label" >Seleccionar Imagen</label>
                <input type="file" name="image" class="custom-file-input" id="inputGroup" aria-describedby="inputGroupFileAddon" required> 
            </div>
            </div>
          <button class="btn btn-success btn-block">
            Registrar
          </button>
        </form>
      </div>
    </div>
  </div>
</div>